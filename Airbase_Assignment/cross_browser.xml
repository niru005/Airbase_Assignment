<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" thread-count="3">
	<listeners>
		<listener class-name="com.airbase.utils.ExtentReportManager" />
	</listeners>
	<test name="ChromeTests">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.airbase.tests.AmazonTest" />
		</classes>
	</test>
	<test name="FirefoxTests">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.airbase.tests.AmazonTest" />
		</classes>
	</test>
	<test name="EdgeTests">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.airbase.tests.AmazonTest" />
		</classes>
	</test>
</suite>

